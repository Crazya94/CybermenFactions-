<?xml version="1.0" encoding="utf-8"?>
<Defs>


  <FactionDef>
    <defName>TheCybermen</defName>
    <label>Cyborgs</label>
    <description>Cybermen believe human flesh is inferior.</description>
    <pawnSingular>Cyberman</pawnSingular>
    <pawnsPlural>Cybermen</pawnsPlural>
    <basicMemberKind>Cybermen</basicMemberKind>
    <listOrderPriority>10</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>supereme</leaderTitle>
    <factionIconPath>World/Faction/Expanding/CybermenBaseIcon</factionIconPath>
    <colorSpectrum>
      <li>(0.45, 0.05, 0.05)</li>
      <li>(0.80, 0.25, 0.05)</li>
    </colorSpectrum>
    <permanentEnemy>true</permanentEnemy>
	<fixedName>The Cyborgs</fixedName>
    <techLevel>Spacer</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>CybermenBackstory</li>
        </categories>
      </li>
    </backstoryFilters>
    <geneticVariance>0.8</geneticVariance>
    <hairTags>
      <li>Punk</li>
    </hairTags>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <!-- Normal fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Cybermen>10</Cybermen>
        </options>
      </li>
      <li>
        <!-- Base defense, mainly ranged with melee mix-ins -->
        <kindDef>Settlement</kindDef>
        <options>
          <Cybermen>2</Cybermen>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>

</Defs>